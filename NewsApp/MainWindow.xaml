<Window x:Class="NewsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:NewsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">

    <Window.Resources>
        <Storyboard x:Key="DropDownStoryboard">
            <DoubleAnimation Storyboard.TargetName="ListBoxContainer" 
                         Storyboard.TargetProperty="Height" 
                         To="100" Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"></ColumnDefinition>
            <ColumnDefinition Width="339*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"></RowDefinition>
            <RowDefinition Height="190*"></RowDefinition>
        </Grid.RowDefinitions>

        <TabControl Margin="1,0,0,0" Grid.RowSpan="2" Grid.Column="2">
            <TabItem
                Header="FootBall" Height="108">
                <TextBlock >
                    
                    <ListView x:Name="LVMainFootball" ItemsSource="{Binding ListUsers}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel >
                                    <Image Width="100" Source ="{Binding Photo}"/>
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Adress}"/>
                                    <TextBlock Text="{Binding Phone}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TextBlock>

            </TabItem>
            <TabItem
                Header="BasketBall" Height="112">
                <TextBlock>
                    
                    <ListView x:Name="LVMainBasketBall" ItemsSource="{Binding ListUsers}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel >
                                    <Image Width="100" Source ="{Binding Photo}"/>
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Adress}"/>
                                    <TextBlock Text="{Binding Phone}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>         
                </TextBlock>

            </TabItem>
            <TabItem
                Header="VoleyBall" Height="110">
                <TextBlock>
                    <ListView x:Name="LVMainVoleyball" ItemsSource="{Binding ListUsers}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel >
                                    <Image Width="100" Source ="{Binding Photo}"/>
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Adress}"/>
                                    <TextBlock Text="{Binding Phone}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>     
                </TextBlock>
            </TabItem>
        </TabControl>

        <Menu Grid.Row="1"
  materialDesign:MenuAssist.TopLevelMenuItemHeight="25">
            <MenuItem
    Header="Very" Width="291" >
                <MenuItem
      Header="Новини про спорт" Width="291"/>
                <MenuItem
      Header="Item 2" Width="291"/>
                <MenuItem
      Header="Item 3" Width="291"/>
            </MenuItem>

        </Menu>

        <Image Source = "./Assets/SportNews.png" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,-1,1627,0" />
    </Grid>
</Window>
